<h2>Your Dashboard</h2>

<div class='row btn btn-success ms-2 mb-1'>
  <a
    href='/create-blog'
    class='text-white text-decoration-none'
    id='add-post-link'
  ><strong>Add New Post</strong></a>
</div>
{{#if user.length}}
  {{#each user as |post|}}
    <a
      href='/blogs/{{id}}'
      type='button'
      class='row text-dark mb-2 mt-2 post-link card'
    >
      <div class='card-header dashboard-card-header'><h5
        >{{post.title}}</h5></div>
      <div class='card-body'>
        <p class='card-text'>
          {{post.content}}
        </p>

      </div>
      <div class='card-footer text-muted'>
        <h6>{{is_it_one commentCount}}</h6>
        You posted this {{format_date post.createdAt}}
      </div>
    </a>
    <div class='card-footer text-muted mb-3'>
      <a href='/edit-blog/{{id}}' class='btn btn-info'>Edit Post</a>
      <button
        data-id='{{post.id}}'
        class='btn bg-danger'
        id='delete-post-button'
      >Delete Post</button>
    </div>
  {{/each}}
{{else}}
  <h3 class='mt-5'>When you write a post, it appears here!</h3>
{{/if}}

<script src='/js/dashboard.js'></script>