<form class='row card' id='edit-blog-form' data-id='{{id}}'>
  <div class='card-header'><h5>{{title}}</h5></div>
  <div class='card-body'>
    <textarea id='edit-blog-textarea' class='card-text'>{{content}}</textarea>
  </div>
  <div class='card-footer text-muted'>
    <button
      id='edit-blog-save-button'
      class='btn btn-info'
      data-id='{{id}}'
    >Save Blog</button>
  </div>

</form>
<script src='/js/edit-blog.js'></script>