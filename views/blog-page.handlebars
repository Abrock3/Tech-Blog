<div class='row card mb-3'>

  <div class='card-header blog-page-header'><h5>{{title}}</h5></div>
  <div class='card-body'>
    <p class='card-text'>
      {{content}}
    </p>
  </div>
  <div class='card-footer text-muted'>
    Posted by
    {{user.username}} {{format_date createdAt}}
  </div>
</div>
<div class='row'>
  <form id='comment-form' data-id='{{id}}' class='col col-lg-6 ms-2'>
    <textarea
      id='comment-text-area'
      rows='6'
      placeholder='Write your comment...'
      class='d-block mb-2 form-control'
    ></textarea>
    <button type='submit' id='comment-submit' class='btn btn-success'><strong
      >Submit Comment</strong></button>
  </form>
</div>
{{#each comments as |comment|}}
  <div class='row card mb-2'>

    <div class='card-body comment-body'>
      <p class='card-text'>{{comment.content}}</p>
    </div>
    <div class='card-footer text-muted'>
      Posted by
      {{comment.user.username}} {{format_date comment.createdAt}}
    </div>

  </div>
{{/each}}
<script src='/js/blog-page.js'></script>